{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "target": "esnext",
        "module": "commonjs",
        "noImplicitAny": false,
        "strict": true,
        "declaration": true,
        "strictNullChecks": true,
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
}
